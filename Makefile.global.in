name		= tubes
version		= @version@
architecture	= @architecture@

prefix		= @prefix@
bindir		= @bindir@
datadir		= @datadir@
exec_prefix	= @exec_prefix@
libdir		= @libdir@
localedir	= @datadir@/locale
mandir		= @datadir@/man
srcdir		= @srcdir@
sysconfdir	= @sysconfdir@
lazdir		= @lazdir@

binmode		= 0755
txtmode		= 0644

install		= @install@
make		= @make@
rm		= @rm@ --force

fpflag		= @fpflag@ -TLinux -dUseFHS -MObjFPC -Scgi -O1 -WG -ve \
                  -Fi./lib/i386-linux/ \
                  -Fu@lazdir@/lcl/units/i386-linux/ \
                  -Fu@lazdir@/lcl/units/i386-linux/gtk2/ \
                  -Fu@lazdir@/packager/units/i386-linux/ \
                  -Fu. \
                  -Fu./synapse/ \
                  -Fu./lib/i386-linux/ \
                  -FE./lib/i386-linux/ \
                  -dLCL \
                  -dLCLgtk2

